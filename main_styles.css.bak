* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background-color: #ffffff;
  color: #fff;
  font-family: sans-serif;
}
a{
  text-decoration: none;
  color: #fff;
}
header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  margin-top: 20px;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}

#logo{
  font-size: 2rem;
  font-weight: bold;
  font-family: 'Montserrat', sans-serif;
  margin-left: 30px;
}

nav ul {
  display: flex;
  list-style: none;
  font-family: 'Montserrat Alternates', sans-serif;
  margin-right: 80px;
}

nav li {
  margin-left: 30px;
}

nav ul li a{
  color: #fff;
  text-decoration: none;
  font-size: 1.2rem;
}

#heart {
  font-size: 35px;
  position: relative;
  bottom: 25%;
}

#photo_man {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

#photo_man img {
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.social-icons {
  position: fixed;
  top: 53%;
  left: 0;
  transform: translateY(-50%);
}

.social-icons a {
  display: block;
  margin-bottom: 20px;
  color: #fff;
  text-decoration: none;
}

.social-icons i {
  width: 40px;
  height: 40px;
  border: 1px solid white;
  margin-left: 30px;
  font-size: 30px;
  padding: 5px;
}

.text {
  position: fixed;
  width: 624px;
  height: 204px;
  left: 657px;
  top: 251px;
  font-family: 'Cormorant', serif;
  font-size: 82px;
  line-height: 102px;
  text-transform: uppercase;
}

#tariff_button {
  position: absolute;
  top: 71%;
  right: 8%;
  width: 557px;
  font-family: 'Montserrat Alternates', sans-serif;
  font-size: 28px;
  line-height: 22px;
  border: 1px solid white;
  background: none;
  padding: 20px;
  color: white;
}

.text.show {
  opacity: 1;
  transform: translateY(0);
}


.second_page a{
  color: #000;
}

.second_page::after{
    content: '';
    display: block;
    width: 100%;
    height: 2px;
    background-color: #000000; /* Цвет полосы */
    position: absolute;
    bottom: 0;
    left: 0;
  }

#about_info{
  font-family: 'Montserrat';
  font-style: normal;
  font-weight: 400;
  color: #000000;
  
}
#about_text{
position: relative;
width: 127px;
height: 39px;
left: calc(50% - 127px/2 + 0.5px);
top: 211px;
font-size: 30px;
line-height: 130%;
}

#main_text{
  position: relative;
  text-align:justify;
  top: 251px;
  width: 1165px;
  font-size: 16px;
  line-height: 24px;
  }